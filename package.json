{
  "name": "bitcoin_signer",
  "version": "0.0.2",
  "description": "[Internal development use] INSECURE CLI BTC transaction signer for integration tests",
  "repository": "https://github.com/gagbo/bitcoin_signer",
  "main": "./dist/index.js",
  "scripts": {
    "build": "tsc --build && chmod +x ./dist/index.js",
    "test": "jest",
    "lint": "eslint ./src --ext .ts --env node",
    "clean": "rimraf ./dist"
  },
  "bin": "./dist/index.js",
  "keywords": [
    "bitcoin",
    "test",
    "signing"
  ],
  "author": "Gerry Agbobada",
  "license": "MIT",
  "devDependencies": {
    "@types/cli-progress": "^3.9.2",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.7.10",
    "@types/yargs": "^17.0.2",
    "@typescript-eslint/eslint-plugin": "^4.30.0",
    "@typescript-eslint/parser": "^4.30.0",
    "axios-logger": "^2.5.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.1.0",
    "prettier": "^2.3.2",
    "ts-jest": "^27.0.5",
    "typescript": "^4.4.2"
  },
  "dependencies": {
    "axios": "^0.21.3",
    "bip32": "^2.0.6",
    "bip39": "^3.0.4",
    "bitcoinjs-lib": "^5.2.0",
    "cli-progress": "^3.9.0",
    "dotenv": "^10.0.0",
    "yargs": "^17.1.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/__tests__/*.+(ts|tsx|js)"
    ]
  }
}
